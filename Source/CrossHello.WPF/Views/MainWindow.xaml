<Window x:Class="CrossHello.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrossHello.WPF.Views"
        xmlns:viewModels="clr-namespace:CrossHello.Mobile.ViewModels;assembly=CrossHello.Mobile"
        mc:Ignorable="d"
        Title="CrossHello" Height="300" Width="300">
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    <StackPanel HorizontalAlignment="Center">
        <Label Content="{Binding SayHiText}"/>
    </StackPanel>
</Window>
